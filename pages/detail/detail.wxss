/* pages/detail/detail.wxss */

.img-box {
  width: 344rpx;
  height: 584rpx;
  margin: 42rpx auto;
  border-radius: 20rpx;
  position: relative;
}

.img-box image {
  width: 344rpx;
  height: 585rpx;
  border-radius: 20rpx;
  box-sizing: border-box;
  box-shadow: 0 0 22rpx rgba(240, 240, 240, 0.6);
}
.wrap{
  width: 528rpx;
  margin: 0 auto;
}
.name, .tel {
  display: block;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1px solid #e0e0e0;
  box-sizing: border-box;
}

.name label, .tel label {
  font-weight: bold;
  width: 83rpx;
  font-size: 28rpx;
  height: 90rpx;
  line-height: 90rpx;
  color: #404040;
  display: inline-block;
  vertical-align: middle;
}

.name input, .tel input {
  vertical-align: middle;
  height: 90rpx;
  line-height: 90rpx;
  width: 420rpx;
  display: inline-block;
  font-size: 28rpx;
  color: #b9b9b9;
}
.btn-charge{
  width: 528rpx;
  margin: 34rpx auto;
  color: #fff;
  font-weight: bold;
  font-size: 32rpx;
  background-color: #27d2fe;
}
.adv{
  width: 580rpx;
  margin: 30rpx auto;
  height: 166rpx;
  overflow: hidden;
}
.adv image{
  width: 100%;
  height: 166rpx;
}