/* pages/detail/detail.wxss */

.img-box {
  width: 607rpx;
  height: 1032rpx;
  margin: 42rpx auto;
  border-radius: 20rpx;
  position: relative;
}

.img-box image {
   width: 607rpx;
  height: 1032rpx;
  border-radius: 20rpx;
  box-sizing: border-box;
  box-shadow: 0 0 22rpx rgba(240, 240, 240, 0.6);
}

.contact-infor {
  position: absolute;
  bottom: 20rpx;
  left: 140rpx;
  height: 60rpx;
  width: 200rpx;
}
.contact-infor text {
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  color: #fb6d9d;
  line-height: 30rpx;
  display: block;
}

.wrap,.shar {
  width: 528rpx;
  margin: 0 auto;
}
.shar{
  text-align: center;
}
.shar view{
  font-size: 26rpx;
  line-height: 40rpx;
  color: #808080;
}
.name, .tel {
  display: block;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1px solid #e0e0e0;
  box-sizing: border-box;
}

.name label, .tel label {
  font-weight: bold;
  width: 83rpx;
  font-size: 28rpx;
  height: 90rpx;
  line-height: 90rpx;
  color: #404040;
  display: inline-block;
  vertical-align: middle;
}

.name input, .tel input {
  vertical-align: middle;
  height: 90rpx;
  line-height: 90rpx;
  width: 445rpx;
  display: inline-block;
  font-size: 24rpx;
  color: #b9b9b9;
}
.btn-charge{
  width: 528rpx;
  margin: 34rpx auto;
  color: #fff;
  font-weight: bold;
  font-size: 32rpx;
  background-color: #27d2fe;
}
.adv{
  width: 580rpx;
  margin: 30rpx auto;
  height: 166rpx;
  overflow: hidden;
}
.adv image{
  width: 100%;
  height: 166rpx;
}